<!DOCTYPE html>
<html lang='en'>
<head>
  <% include partials/_header %>
</head>
<body>
  <main>
    <form method='POST' action='/urls/create'>
      <input type='submit', value='Create New short url'>
    </form>
    <h2>url Database</h2>
      <% Object.keys(urls).forEach(function (key) { %>
        <li>
          <%= key %> → <a href='<%= urls[key] %>'><%= urls[key] %></a>
          <form method='POST' action='/urls/<%= key %>/delete'>
          <input type='submit', value='Delete 🗑️'>
          </form>
          <form method='POST' action='/urls/<%= key %>/updateRequest'>
            <input type='submit', value='Update'>
          </form>
        </li>
      <% }); %>
  </main>
</body>
</html>